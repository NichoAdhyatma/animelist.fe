generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Collection {
  id           Int     @id @default(autoincrement())
  anime_mal_id Int
  user_email   String
  anime_image  String?
  anime_title  String?

  @@unique([user_email, anime_mal_id])
}

model Comment {
  id           Int      @id @default(autoincrement())
  anime_mal_id Int
  anime_title  String
  user_email   String
  comment      String
  username     String
  createdAt    DateTime @default(now()) 
}
